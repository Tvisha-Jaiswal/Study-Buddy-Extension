{
  "manifest_version": 3,
  "name": "Study Buddy",
  "description": "This extension will help students",
  "version": "0.1.0",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": "images/icon48.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*.hackerrank.com/*",
    "*://*.codeforces.com/*",
    "*://*.geeksforgeeks.org/*",
    "https://api.groq.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.leetcode.com/*",
        "*://*.hackerrank.com/*",
        "*://*.codeforces.com/*",
        "*://*.geeksforgeeks.org/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  }
}